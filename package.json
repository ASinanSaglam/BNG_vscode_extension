{
    "publisher": "als251",
    "repository": {
        "type": "git",
        "url": "https://github.com/ASinanSaglam/bngl-grammar-vscode"
    },
    "icon": "assets/icon.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "name": "bngl",
    "displayName": "BNGL-grammar",
    "description": "BNG language grammar for vscode",
    "version": "0.2.5",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes"
    ],
    "main": "./src/extension.js",
    "activationEvents": [
        "onLanguage:bngl"
    ],
    "contributes": {
        "languages": [{
            "id": "bngl",
            "aliases": ["BioNetGen Language", "bng"],
            "extensions": [".bngl", ".gdat", ".cdat"],
            "configuration": "./bngl-language-configuration.json"
        }],
        "grammars": [{
            "language": "bngl",
            "scopeName": "source.bngl",
            "path": "./syntaxes/bngl.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "bngl",
                "path": "./snippets/bngl-snippets.json"
            }
        ],
        "themes": [{
            "label": "dark-bngl",
            "uiTheme": "vs-dark",
            "path": "./themes/dark-bngl.json"
        }],
        "commands": [{
            "command": "bng.run_bngl",
            "title": "Run BNG",
            "icon": {
                "dark": "./assets/icon.png",
                "light": "./assets/icon.png"
            }},
            {
                "command": "bng.plot_gdat",
                "title": "Plot gdat",
                "icon": {
                    "dark": "./assets/plot_icon_dark.svg",
                    "light": "./assets/plot_icon_light.svg"
                }
            },
            {
                "command": "bng.plot_cdat",
                "title": "Plot cdat",
                "icon": {
                    "dark": "./assets/plot_icon_dark.svg",
                    "light": "./assets/plot_icon_light.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [{
                "when": "resourceLangId == bngl && resourceExtname == .bngl",
                "group": "navigation",
                "title": "Run BNG",
                "command": "bng.run_bngl"
            },
            {
                "when": "resourceLangId == bngl && resourceExtname == .gdat",
                "group": "navigation",
                "title": "Plot gdat",
                "command": "bng.plot_gdat"
            },
            {
                "when": "resourceLangId == bngl && resourceExtname == .cdat",
                "group": "navigation",
                "title": "Plot cdat",
                "command": "bng.plot_cdat"
            }]
        },
        "keybindings": [{
            "command": "bng.run_bngl",
            "key": "ctrl+shift+f1",
            "mac": "cmd+shift+f1",
            "when": "resourceLangId == bngl"
        }],
        "scripts": {
            "lint": "eslint .",
            "pretest": "npm run lint",
            "test": "node ./test/runTest.js"
          },
          "devDependencies": {
            "@types/glob": "^7.1.3",
            "@types/mocha": "^8.0.4",
            "@types/node": "^12.11.7",
            "@types/vscode": "^1.52.0",
            "eslint": "^7.15.0",
            "glob": "^7.1.6",
            "mocha": "^8.1.3",
            "typescript": "^4.1.2",
            "vscode-test": "^1.4.1"
          }
    }
}